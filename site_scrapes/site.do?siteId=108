<script type="text/javascript">

	function getResultPdf(src){
		var html = '<iframe src="' + src + '" id="iFrameResultatObject" frameborder="0" width="700" height="700"></iframe>';
		$("#visualisation-fichier-resultat").html(html);
		
		$("#liste-fichiers-resultat a").removeClass("active");
		$("#get-result-pdf").addClass("active");
	}
	
	function getResultPage(id){
		$("#visualisation-fichier-resultat").html("");
		$("#liste-fichiers-resultat a").removeClass("active");
		$("#link-page-" + id).addClass("active");
		$("#visualisation-fichier-resultat").html($("#page-" + id).html());
	}
	
	function getTable(datas, title_table, nb_line, nb_column){
		var html = '<h3>' + title_table + '</h3><table align="center"><tbody>';
		var lines = datas.split("\n");
		for(var i = 0; i < nb_line; i++){
			if(i < lines.length){
				if(i==0) html += '<tr class="title">';
				else if(i%2 == 1) html += '<tr class="odd">';
				else html += '<tr class="even">';
				
				var columns = lines[i].split(";");
				for(var j = 0; j < nb_column; j++){
					if(j < columns.length){
						if(j==0) html += '<td class="title">' + columns[j] + '</td>';
						else if(j%2 == 1) html += '<td class="odd">' + columns[j] + '</td>';
						else html += '<td class="even">' + columns[j] + '</td>';
					}else{
						if(j==0) html += '<td class="title"></td>';
						else if(j%2 == 1) html += '<td class="odd"></td>';
						else html += '<td class="even"></td>';
					}
				}
				html += "</tr>";
			}
		}
		html += "</tbody></table>";
		return html;
	}
	
	function getChart(id, datas, type, title){
		var series = new Array();
		var lines = datas.split("\n");
		for(var i = 0; i+1 < lines.length; i++){
			var data = new Array();
			var columns = lines[i+1].split(";");
			for(var j = 0; j < columns.length; j++) data.push(parseFloat(columns[j]));
			var serie = {name: lines[i], data: data};
			series.push(serie);
			i++;
		}
		
		var chart = new Highcharts.Chart({
			title: {
                text: title,
                x: -20 //center
            },
            credits : {
				enabled : false
			},
            chart: {
                renderTo: id,
                type: type
            },
            series: series
        });
	}

	$(document).ready(function(){
		
		var resultat = "";
		
		
			
			
				resultat = '/data/MetaSite/upload/companionSite108/data/demo-result.pdf';
			
		
		
		
		if(resultat == "") $("#get-result-pdf").hide();
		
		$("#get-result-pdf").click(function(){
			getResultPdf(resultat);
			return false;
		});
				
		if(resultat != "") $("#get-result-pdf").parent().after('<li><a id="download-result-pdf" href="' + resultat + '">Download result.pdf</a></li>');
		
		$.ajax({
	        url: resultat + '&type=tgz', 
	        method: 'post',
	        async: false,
	        success: function(data){
	        	if(data != "NOT-OK") $("#download-result-pdf").parent().after('<li><a id="get-result-tgz" href="' + resultat + '&type=tgz">Download result.tgz</a></li>');	
	        }
	    });
		
		getResultPdf(resultat);
		
		
		
		
		
	});

</script>

